<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_itemmanage_item"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_background"
    >

    <TextView
        android:id="@+id/tv_itemmanage_name"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:paddingLeft="6dp"
        android:paddingTop="15dp"
        android:id="@+id/tv_itemmanage_description"
        android:text="宝贝描述宝贝描述宝贝描述宝贝描述宝贝描述"
        android:textColor="@color/text_gray"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:singleLine="false"
        android:maxLines="2"
        android:layout_height="wrap_content"/>


    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_itemmanage_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_placeholder"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImage="@mipmap/icon_progress_bar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:failureImage="@mipmap/icon_failure"
            fresco:failureImageScaleType="centerInside"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_itemmanage_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="3dp"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_placeholder"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImage="@mipmap/icon_progress_bar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:failureImage="@mipmap/icon_failure"
            fresco:failureImageScaleType="centerInside"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_itemmanage_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="3dp"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_placeholder"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImage="@mipmap/icon_progress_bar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:failureImage="@mipmap/icon_failure"
            fresco:failureImageScaleType="centerInside"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_itemmanage_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="3dp"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_placeholder"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImage="@mipmap/icon_progress_bar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:failureImage="@mipmap/icon_failure"
            fresco:failureImageScaleType="centerInside"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_itemmanage_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="3dp"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_placeholder"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImage="@mipmap/icon_progress_bar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:failureImage="@mipmap/icon_failure"
            fresco:failureImageScaleType="centerInside"
            />


    </LinearLayout>

    <View android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>


    <RelativeLayout android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:paddingLeft="6dp">

        <TextView android:layout_width="wrap_content"
            android:text="转让"
            android:id="@+id/tv_turnto"
            android:gravity="center_vertical"
            android:textColor="@color/gray_btn_bg_pressed_color"
            android:layout_height="match_parent"/>

        <TextView android:layout_width="wrap_content"
            android:id="@+id/tv_itemmanage_price"
            android:text="￥145"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_turnto"
            android:textColor="@color/red"
            android:layout_height="match_parent"/>

        <TextView android:layout_width="wrap_content"
            android:id="@+id/tv_itemmanage_delete"
            android:gravity="center_vertical"
            android:text="删除"
            android:drawableLeft="@mipmap/icon_itemmanage_delet"
            android:textColor="@color/gray_btn_bg_pressed_color"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"/>


        <TextView android:layout_width="wrap_content"
            android:visibility="gone"
            android:id="@+id/tv_itemmanage_edit"
            android:gravity="center_vertical"
            android:text="编辑"
            android:layout_marginRight="5dp"
            android:drawableLeft="@mipmap/icon_itemmanage_edit"
            android:textColor="@color/gray_btn_bg_pressed_color"
            android:layout_toLeftOf="@id/tv_itemmanage_delete"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:paddingLeft="6dp"
        android:layout_marginTop="6dp"
        android:background="@color/list_divider_color" />


</LinearLayout>