<?xml version="1.0" encoding="utf-8"?>
<!-- Created by zfang on 2015/11/07. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/view_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/slv_buy_procedure"
            android:layout_marginBottom="50dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/con_padding"
                    android:paddingRight="@dimen/con_padding"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/img_buy_procedure_item_photo"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="15dip"
                        android:layout_marginBottom="15dip"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        fresco:actualImageScaleType="centerInside"
                        fresco:roundedCornerRadius="30dp"
                        fresco:roundingBorderWidth="1dp"
                        fresco:roundingBorderColor="@color/white"
                        fresco:roundTopLeft="true"
                        fresco:roundTopRight="true"
                        fresco:roundBottomLeft="true"
                        fresco:roundBottomRight="true"
                        android:src="@mipmap/me_photo_2x_81"/>
                    <TextView
                        android:id="@+id/tv_buy_procedure_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dip"
                        android:layout_centerVertical="true"
                        android:text="公主爱漂亮"
                        android:layout_toRightOf="@id/img_buy_procedure_item_photo"
                        android:paddingLeft="5dip"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/text_black"/>
                    <RelativeLayout
                        android:id="@+id/rl_buy_procedure_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true">
                        <LinearLayout
                            android:paddingLeft="10px"
                            android:paddingRight="10px"
                            android:paddingTop="5px"
                            android:paddingBottom="5px"
                            android:id="@+id/tv_buy_procedure_price_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textviewboundshape"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:id="@+id/tv_buy_procedure_current_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#006633"
                                android:layout_marginRight="5dip"
                                android:textSize="@dimen/text_normal"
                                android:text="￥388" />
                            <TextView
                                android:id="@+id/tv_buy_procedure_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text_normal"
                                android:text="￥1388" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_buy_procedure_opera_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/tv_buy_procedure_price_ll"
                            android:textColor="@color/main_light_yellow"
                            android:layout_alignWithParentIfMissing="true"
                            android:textSize="@dimen/text_normal"
                            android:text="转让"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="8px"/>
                        <TextView
                            android:id="@+id/tv_buy_procedure_economy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_normal"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/tv_buy_procedure_price_ll"
                            android:text="节省￥1000" />
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_buy_procedure_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/con_padding"
                    android:paddingLeft="@dimen/con_padding"
                    android:paddingRight="@dimen/con_padding"
                    android:text="芡米茄钢款计时自动机械男士手表"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/light_grey"/>
                <RelativeLayout
                    android:id="@+id/rl_container_vp"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/con_padding"
                    android:paddingRight="@dimen/con_padding"
                    android:layout_height="180dip">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_buy_procedure"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_buy_procedure_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:text="2/4"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/pager_float_round_black_bkg"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/con_padding"
                        android:layout_marginRight="@dimen/con_padding"
                        android:textColor="@color/white"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_buy_procedure_item_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/con_padding"
                    android:paddingLeft="@dimen/con_padding"
                    android:paddingRight="@dimen/con_padding"
                    android:text="这里有多美，你们自己看，设计团队的呕心沥作，穿到身上的瞬间发光，昂贵的亲服极了~~"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="6dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/con_padding"
                    android:paddingRight="@dimen/con_padding"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_buy_procedure_position"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="4dip"
                        android:drawableLeft="@mipmap/icon_rental_position"
                        android:textColor="#009966"
                        android:textSize="@dimen/text_smaller"
                        android:text="广州市天河区体育东路227号" />
                    <LinearLayout
                        android:id="@+id/ll_buy_procedure_operate"
                        android:layout_width="30dip"
                        android:layout_height="40dip"
                        android:paddingTop="22dip"
                        android:paddingBottom="10dip"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="30dip"
                            android:layout_height="20dip"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/icon_operate_bkg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_buy_procedure_op"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_marginTop="10dip"
                        android:alpha="0.8"
                        android:visibility="gone"
                        android:background="@drawable/pop_round_black_bkg"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@id/ll_buy_procedure_operate">
                        <TextView
                            android:id="@+id/tv_buy_procedure_praise"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_smaller"
                            android:text="点赞" />
                        <TextView
                            android:id="@+id/tv_buy_procedure_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/icon_rental_tv_drawable"
                            android:drawablePadding="2dip"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_smaller"
                            android:text="评论" />
                        <TextView
                            android:id="@+id/tv_buy_procedure_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_smaller"
                            android:text="收藏" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/tv_buy_procedure_like_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dip"
                        android:background="@color/window_background"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_buy_procedure_like_also"
                            android:layout_width="wrap_content"
                            android:paddingLeft="@dimen/con_padding"
                            android:paddingRight="@dimen/con_padding"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="248人喜欢了"
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_buy_procedure_more_people_love"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/con_padding"
                            android:layout_gravity="right"
                            android:drawablePadding="4dip"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_smaller"
                            android:textColor="#006633"
                            android:text="@string/action_more_arrow"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color"/>
                    <com.jyx.android.widget.view.NoScrollGridView
                        android:id="@+id/gd_buy_procedure_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnWidth="80dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginLeft="10dip"
                        android:horizontalSpacing="1dp"
                        android:numColumns="6"
                        android:stretchMode="columnWidth"
                        android:visibility="visible"
                        android:verticalSpacing="1dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tv_buy_procedure_comment_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dip"
                        android:background="@color/window_background"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_buy_procedure_comment_num"
                            android:layout_width="wrap_content"
                            android:paddingLeft="@dimen/con_padding"
                            android:paddingRight="@dimen/con_padding"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="评论（48）"
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_buy_procedure_more_people_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/con_padding"
                            android:layout_gravity="right"
                            android:drawablePadding="4dip"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/text_smaller"
                            android:textColor="#006633"
                            android:text="@string/action_more_arrow"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color"/>
                    <LinearLayout
                        android:id="@+id/ll_buy_procedure_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dip"
                        android:layout_marginLeft="@dimen/con_padding"
                        android:layout_marginRight="@dimen/con_padding"
                        android:visibility="gone"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_buy_procedure_photo"
                            android:layout_width="48dip"
                            android:layout_height="48dip"
                            android:maxHeight="48dip"
                            android:maxWidth="48dip"
                            android:background="@mipmap/me_photo_2x_81"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"/>
                        <TextView
                            android:id="@+id/tv_buy_procedure_name"
                            android:layout_toRightOf="@id/iv_buy_procedure_photo"
                            android:layout_marginLeft="10dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名古屋小樱"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/text_black"/>
                        <TextView
                            android:id="@+id/tv_buy_procedure_comment_item_content"
                            android:layout_below="@id/tv_buy_procedure_name"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/iv_buy_procedure_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="这些东西真的好漂亮喔~~~,这些东西真的好漂亮喔~这些东西真的好漂亮喔~这些东西真的好漂亮喔~这些东西真的好漂亮喔~这些东西真的好漂亮喔~这些东西真的好漂亮喔~这些东西真的好漂亮喔~"
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/text_gray"/>
                        <TextView
                            android:id="@+id/tv_buy_procedure_comment_item_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_smaller"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_gray"
                            android:text="24分钟前"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_buy_procedure_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/done_text_color_normal">
            <LinearLayout
                android:padding="8dp"
                android:id="@+id/ll_buy_procedure_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_black_round_selector"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_buy_procedure_talk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:drawableLeft="@mipmap/icon_rental_tv_drawable"
                    android:drawablePadding="2dip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small"
                    android:gravity="center"
                    android:text="@string/buy_procedure_talk" />
                <LinearLayout
                    android:id="@+id/tv_buy_procedure_share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="2dip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip"
                        android:paddingRight="10dip"
                        android:drawableLeft="@mipmap/shar_borw"
                        android:drawablePadding="2dip"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        android:gravity="center"
                        android:text="@string/buy_procedure_share" />
                </LinearLayout>>
                <TextView
                    android:id="@+id/tv_buy_procedure_want"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_procedure_want"
                    android:background="@drawable/btn_red_round_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:paddingRight="20dip"
                    android:paddingLeft="20dip"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/pb_loading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            wheel:barColor="@color/main_yellow"
            wheel:progressIndeterminate="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
