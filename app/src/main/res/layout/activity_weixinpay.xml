<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/weixinpay_title"
        android:textSize="19sp"
        android:textColor="@color/text_black"
        android:id="@+id/tv_weixinpay_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="￥169.00"
        android:textSize="22sp"
        android:textColor="@color/text_black"
        android:id="@+id/tv_weixinpay_amount" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="50dp"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/weixinpay_payee_title"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:id="@+id/tv_weixinpay_payee_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:text="借一下"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:id="@+id/tv_weixinpay_payee" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/weixinpay_goods_title"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:id="@+id/tv_weixinpay_goods_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:text="借一下支付"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:id="@+id/tv_weixinpay_goods" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_yellow_round_selector"
        android:text="@string/weixinpay_paynow"
        android:textSize="16sp"
        android:id="@+id/btn_weixinpay_paynow"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom|center_horizontal"
        android:text="@string/weixinpay_bottom_title"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:id="@+id/tv_weixinpay_bottom_title" />

</LinearLayout>
