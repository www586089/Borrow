<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">
    <include layout="@layout/view_toolbar" />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:tag="ComentListFragment"
        android:name="com.jyx.android.activity.purchase.ComentListFragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/common_input_bg_selector"
            android:hint="@string/commentlists_input"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@null"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/et_commentlists_input"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_yellow_round_selector"
            android:text="@string/commentlists_button"
            android:textSize="16sp"
            android:id="@+id/btn_commentlists_publish"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>