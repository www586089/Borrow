<?xml version="1.0" encoding="utf-8"?>
<!-- Created by zfang on 2015/11/01.-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/encode_view">
<RelativeLayout
    android:id="@+id/rv_group_cont"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
>
    <RelativeLayout
        android:id="@+id/rl_group_rental_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_group_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="centerInside"
            fresco:roundedCornerRadius="30dp"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@color/white"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            android:src="@mipmap/me_photo_2x_81"
            />
        <!--<ImageView-->
            <!--android:id="@+id/iv_group_img"-->
            <!--android:layout_width="48dp"-->
            <!--android:layout_height="48dp"-->
            <!--android:src="@mipmap/me_photo_2x_81"/>-->

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_group_img"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_normal"
            android:text="深圳大学07届3（1）班群" />
        <LinearLayout
            android:id="@+id/ll_group_rental_arrow"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/img_group_rental_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/icon_arrow_up"/>
        </LinearLayout>
        <View
            android:layout_below="@id/iv_group_img"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:alpha="0.5"
            android:background="@color/gray"/>
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_below="@id/rl_group_rental_owner"
        android:id="@+id/img_rental_avator"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="centerInside"
        fresco:roundedCornerRadius="30dp"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="@color/white"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        android:src="@mipmap/me_photo_2x_81"
        />
    <!--<ImageView-->
        <!--android:id="@+id/img_rental_avator"-->
        <!--android:layout_below="@id/rl_group_rental_owner"-->
        <!--android:layout_marginTop="5dip"-->
        <!--android:layout_width="48dp"-->
        <!--android:layout_height="48dp"-->
        <!--android:src="@mipmap/me_photo_2x_81"/>-->

    <TextView
        android:id="@+id/tv_rental_name"
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/img_rental_avator"
        android:layout_toRightOf="@id/img_rental_avator"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_normal"
        android:text="公主爱漂亮" />
    <RelativeLayout
        android:layout_below="@id/rl_group_rental_owner"
        android:id="@+id/rl_rental_price"
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:layout_alignBottom="@id/img_rental_avator"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:id="@+id/ll_rental_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:background="@drawable/textviewboundshape"
            android:paddingTop="3px"
            android:paddingBottom="3px"
            android:paddingLeft="10px"
            android:paddingRight="10px">
            <TextView
                android:id="@+id/tv_rental_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/red_6666"
                android:textSize="@dimen/text_small"
                android:text="￥388" />
            <TextView
                android:id="@+id/tv_rental_original_price"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_small"
                android:text="￥1388" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="3px"
            android:id="@+id/tv_rental_opera_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/ll_rental_price"
            android:textColor="@color/main_light_yellow"
            android:textSize="@dimen/text_small"
            android:text="转让" />
        <TextView
            android:background="@drawable/textviewboundshape"
            android:paddingTop="3px"
            android:paddingBottom="3px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:id="@+id/tv_rental_economize_price"
            android:layout_below="@id/ll_rental_price"
            android:layout_alignRight="@id/ll_rental_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006633"
            android:textSize="@dimen/text_small"
            android:text="节省￥1000" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_rental_discripe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gd_rental_photos"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_black"
        android:layout_toRightOf="@id/img_rental_avator"
        android:text="这里有多美，你们自己看，设计团队的呕心沥作，穿到身上的瞬间发光，昂贵的亲服极了~~"
        android:autoLink="web" />

    <com.jyx.android.widget.view.NoScrollGridView
        android:id="@+id/gd_rental_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_rental_price"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/img_rental_avator"
        android:horizontalSpacing="4dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:visibility="gone"
        android:verticalSpacing="4dp" />
    <RelativeLayout
        android:id="@+id/rl_location_and_op"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rental_discripe"
        android:layout_toRightOf="@id/img_rental_avator">
        <LinearLayout
            android:id="@+id/ll_location_and_op"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="8dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_rental_position"/>
            <TextView
                android:id="@+id/tv_rental_current_position"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="#009966"
                android:textSize="@dimen/text_smaller"
                android:text="广州市天河区体育东路227号"
                />
        </LinearLayout>
        <View
            android:layout_below="@id/ll_location_and_op"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/list_item_background_pressed" />
        <LinearLayout
            android:id="@+id/ll_rental_operate"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:paddingTop="32dip"
            android:layout_marginTop="6dip"
            android:paddingBottom="10dip"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@mipmap/icon_operate_bkg"
            android:layout_alignParentRight="true">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_rental_op"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_below="@+id/rl_location_and_op"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/tv_rental_praise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_dianzan_drawable"
            android:textColor="#818181"
            android:textSize="@dimen/text_smaller"
            android:text="点赞" />
        <TextView
            android:id="@+id/tv_rental_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_pinglun_drawable"
            android:drawablePadding="2dip"
            android:textColor="#818181"
            android:textSize="@dimen/text_smaller"
            android:text="评论" />
        <TextView
            android:id="@+id/tv_rental_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_xiazai_drawable"
            android:textColor="#818181"
            android:textSize="@dimen/text_smaller"
            android:text="收藏" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_comment_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_rental_op"
        android:layout_toRightOf="@id/img_rental_avator"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_comment_reply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical"
            android:background="@color/help_button_view">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#818181"
                android:text="嘻嘻哈：你是谁啊，呵呵！"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#818181"
                android:text="嘻嘻哈：你是谁啊，呵呵！" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rv_group_cont"
        android:layout_marginTop="6dp">
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1.5px"-->
            <!--android:background="@color/list_divider_color" />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/list_item_background_pressed" />
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1.5px"-->
            <!--android:background="@color/list_divider_color" />-->
    </LinearLayout>

</RelativeLayout>