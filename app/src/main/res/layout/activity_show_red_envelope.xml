<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
             android:layout_marginBottom="60dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
              >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        />
    <!-- android:background="@mipmap/ic_show_red_envelope"-->

    <ImageView android:id="@+id/iv_close"
        android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@mipmap/icon_close"
    />


    <TextView android:id="@+id/tv_open"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="拆红包"
              android:textSize="18sp"
              android:gravity="center"
              android:background="@drawable/bg_red_envelop_selector"
    />

    <TextView android:id="@+id/tv_show_all"
              android:layout_marginBottom="30dp"
              android:layout_gravity="bottom|center_horizontal"
              android:text="查看大家的手气>"
              android:textSize="18sp"
              android:textColor="@color/main_yellow"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    />


</FrameLayout>