<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_my_love_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_my_love_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="6dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_my_love_person"
            android:layout_gravity="left"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="centerInside"
            fresco:roundedCornerRadius="30dp"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@color/white"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            android:adjustViewBounds="true"
            android:src="@mipmap/me_photo_2x_81" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_my_love_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_small"
                    android:text="用户名"
                    />
                <TextView
                    android:paddingTop="15dp"
                    android:id="@+id/tv_my_love_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:text="内容"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/list_divider_holo_light"
                    android:layout_alignParentTop="true"
                    />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="15dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_my_loveitem1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        fresco:actualImageScaleType="centerInside"
                        fresco:placeholderImage="@mipmap/icon_placeholder"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarImage="@mipmap/icon_progress_bar"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:progressBarAutoRotateInterval="5000"
                        fresco:failureImage="@mipmap/icon_failure"
                        fresco:failureImageScaleType="centerInside"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_my_loveitem2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="3dp"
                        fresco:actualImageScaleType="centerInside"
                        fresco:placeholderImage="@mipmap/icon_placeholder"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarImage="@mipmap/icon_progress_bar"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:progressBarAutoRotateInterval="5000"
                        fresco:failureImage="@mipmap/icon_failure"
                        fresco:failureImageScaleType="centerInside"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_my_loveitem3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="3dp"
                        fresco:actualImageScaleType="centerInside"
                        fresco:placeholderImage="@mipmap/icon_placeholder"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarImage="@mipmap/icon_progress_bar"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:progressBarAutoRotateInterval="5000"
                        fresco:failureImage="@mipmap/icon_failure"
                        fresco:failureImageScaleType="centerInside"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_my_loveitem4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="3dp"
                        fresco:actualImageScaleType="centerInside"
                        fresco:placeholderImage="@mipmap/icon_placeholder"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarImage="@mipmap/icon_progress_bar"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:progressBarAutoRotateInterval="5000"
                        fresco:failureImage="@mipmap/icon_failure"
                        fresco:failureImageScaleType="centerInside"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_my_loveitem5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="3dp"
                        fresco:actualImageScaleType="centerInside"
                        fresco:placeholderImage="@mipmap/icon_placeholder"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarImage="@mipmap/icon_progress_bar"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:progressBarAutoRotateInterval="5000"
                        fresco:failureImage="@mipmap/icon_failure"
                        fresco:failureImageScaleType="centerInside"
                        />

                </LinearLayout>

            </HorizontalScrollView>

            </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginRight="17dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:id="@+id/tv_itemmanage_delete"
        android:gravity="center_vertical"
        android:text="删除"
        android:drawableLeft="@mipmap/icon_itemmanage_delet"
        android:textColor="@color/gray_btn_bg_pressed_color"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="6dp"
        android:background="@color/list_divider_color" />

</LinearLayout>