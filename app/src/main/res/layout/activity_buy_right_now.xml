<?xml version="1.0" encoding="utf-8"?>
<!-- Created by zfang on 2015/10/25. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dip"
                        android:paddingRight="12dip"
                        android:paddingTop="15dip"
                        android:paddingBottom="15dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/buy_right_now_item_img"
                            android:layout_width="120dip"
                            android:layout_height="120dip"
                            fresco:actualImageScaleType="centerInside"
                            fresco:failureImage="@mipmap/icon_loading"
                            fresco:failureImageScaleType="centerInside"
                            fresco:progressBarImage="@mipmap/icon_loading"
                            fresco:progressBarImageScaleType="centerInside"/>
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="6dip"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/buy_right_now_item_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black"
                                android:textSize="18sp"
                                android:singleLine="false"
                                android:text="欧米茄钢款计时自动机械男士手表"/>

                            <TextView
                                android:id="@+id/buy_right_now_item_des"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black"
                                android:textSize="14sp"
                                android:layout_marginTop="5dip"
                                android:text="这里有多美，你们自己看，设计团队的呕心沥作，穿到身上的瞬间发光，昂贵的亲服极了~~"/>
                            <TextView
                                android:id="@+id/buy_right_now_item_origin_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black"
                                android:textSize="14sp"
                                android:layout_marginTop="5dip"
                                android:text="原价：￥165.00"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:layout_marginTop="5dip"
                        android:visibility="gone"
                        android:background="@color/list_divider_color"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dip"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:visibility="gone"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:text="@string/buy_right_now_price_total"/>
                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:gravity="right"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:text="￥165.00"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:background="@color/list_divider_color"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:layout_marginTop="5dip"
                    android:background="@color/list_divider_color"/>
                <LinearLayout
                    android:id="@+id/buy_right_now_edit_address_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dip"
                    android:background="@drawable/list_item_background"
                    android:paddingRight="12dip"
                    android:paddingTop="6dip"
                    android:paddingBottom="6dip"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_black"
                                android:text="@string/buy_right_now_receiver"/>
                            <TextView
                                android:id="@+id/buy_right_now_receiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginLeft="6dip"
                                android:textColor="@color/text_black"
                                android:text="张三"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/buy_right_now_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_black"
                            android:text="手机号：13800133800"/>
                        <TextView
                            android:id="@+id/buy_right_now_address_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/text_gray"
                            android:text="广东省深圳市宝安区前进路智汇创新中心B座东1808"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@mipmap/ic_item_goto_right_tip"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:background="@color/list_divider_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="@color/list_divider_color"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dip"
                        android:gravity="center_vertical">
                        <RelativeLayout
                            android:id="@+id/rl_buy_right_now_transfer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="转让"
                                android:textSize="16sp"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/text_black"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_buy_right_now_discount_price"
                                android:layout_width="wrap_content"
                                android:text="优惠价：￥165"
                                android:textSize="16sp"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/text_black"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_buy_right_now_gift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="赠送"
                                android:textSize="16sp"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/text_black"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_transfer_des"
                                android:layout_width="wrap_content"
                                android:text="请吃饭"
                                android:textSize="16sp"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/text_black"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_buy_right_now_rent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="租借"
                                    android:textSize="18sp"
                                    android:textColor="@color/text_gray"
                                    android:checked="true" />
                                <TextView
                                    android:id="@+id/buy_right_now_deposit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:text="押金：￥165"
                                    android:checked="false" />
                                <TextView
                                    android:id="@+id/buy_right_now_rent_per_unit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:text="租金：￥50/月"
                                    android:textColor="@android:color/black"
                                    android:checked="false" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.8dip"
                                android:layout_centerVertical="true"
                                android:background="@color/list_divider_color"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dip"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="时间"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text_gray"
                                    android:checked="true" />
                                <RadioGroup
                                    android:id="@+id/rg_buy_right_now_select"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dip"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:id="@+id/rb_buy_right_now_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="1月"
                                        android:textColor="@android:color/black"
                                        android:checked="true" />
                                    <RadioButton
                                        android:id="@+id/rb_buy_right_now_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@android:color/black"
                                        android:text="3月"
                                        android:checked="false" />
                                    <RadioButton
                                        android:id="@+id/rb_buy_right_now_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="6月"
                                        android:textColor="@android:color/black"
                                        android:checked="false" />
                                    <RadioButton
                                        android:id="@+id/rb_buy_right_now_4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="1年"
                                        android:textColor="@android:color/black"
                                        android:checked="false" />
                                </RadioGroup>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/list_divider_color"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/buy_right_now_pay_way"
                    android:layout_marginTop="10dip"
                    android:textSize="12sp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="6dip"
                    android:visibility="gone"
                    android:textColor="@color/text_black"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:background="@color/list_divider_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/pay_order_weixin_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/list_item_background"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/buy_right_now_weixin_pay"
                            android:layout_marginTop="10dip"
                            android:layout_marginBottom="10dip"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:drawablePadding="8dip"
                            android:drawableLeft="@mipmap/icon_pay_wein"
                            android:textColor="@color/text_black"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="0dip"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/buy_right_now_weixin_bkg"
                                android:background="@mipmap/icon_selected_normal"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:visibility="gone"
                        android:background="@color/list_divider_color"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dip"
                        android:visibility="gone"
                        android:background="@drawable/list_item_background"
                        android:id="@+id/pay_order_alipay_ll"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/buy_right_now_alipay"
                            android:layout_marginTop="10dip"
                            android:layout_marginBottom="10dip"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:drawablePadding="8dip"
                            android:drawableLeft="@mipmap/icon_alipay"
                            android:textColor="@color/text_black"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="0dip"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/buy_right_now_alipay_bkg"
                                android:background="@mipmap/icon_selected_normal"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="@color/list_divider_color"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dip"
                        android:background="@drawable/list_item_background"
                        android:id="@+id/pay_order_wallet_ll"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/buy_right_now_wallet_pay"
                            android:layout_marginTop="10dip"
                            android:layout_marginBottom="10dip"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:drawablePadding="8dip"
                            android:drawableLeft="@mipmap/icon_wallet_pay"
                            android:textColor="@color/text_black"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="0dip"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/buy_right_now_wallet_pay_bkg"
                                android:background="@mipmap/icon_selected_normal"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:background="@color/list_divider_color"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:layout_marginTop="20dip"
                    android:background="@color/list_divider_color"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingLeft="12dip"
            android:paddingTop="15dip"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dip"
            android:paddingRight="12dip"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/buy_right_now_total"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/buy_right_now_item_price"
                android:layout_width="wrap_content"
                android:text="￥165.00"
                android:textSize="16sp"
                android:paddingLeft="6dip"
                android:textColor="#FF6666"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/submit_order_ll"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/buy_right_now_submit"
                    android:background="@drawable/btn_red_round_selector"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>