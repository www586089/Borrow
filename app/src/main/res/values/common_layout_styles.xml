<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WrapView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  ////////////////////////////////////////  -->
    <style name="WrapBlackTextView" parent="WrapView">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="BigBlackTextView" parent="WrapBlackTextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NormalBlackTextView" parent="WrapBlackTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallBlackTextView" parent="WrapBlackTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- //////////////////////////////////////// -->
    <style name="WrapGrayTextView" parent="WrapView">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="BigGrayTextView" parent="WrapGrayTextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NormalGrayTextView" parent="WrapGrayTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallGrayTextView" parent="WrapGrayTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- //////////////////////////////////////// -->

    <style name="MatchButton" parent="MatchView">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GrayBorderMatchButton" parent="MatchButton">
        <item name="android:background">@drawable/btn_gray_round_border_selector</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="HorizontalMatchLinearLayout" parent="MatchView">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CommonCheckBox" parent="NormalBlackTextView">
        <item name="android:button">@drawable/btn_checkbox_selector</item>
    </style>
</resources>